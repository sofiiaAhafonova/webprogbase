<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Create Project</title>

  <meta name="author" content="Ahafonova Sofiia">
  <link type="text/css" href="../stylesheets/style.css" rel="stylesheet" />
</head>
<body>
  <% include menu_bar.ejs%>
  <div class="main">  
  <div class="projects">
      <h1 id="C0">Create new project</h1>
      <form action="post_enctype.asp" method="post" enctype="multipart/form-data">
      <table>
        <tr>
          <th> Project logo: </th>
          <td>
            <input type="file" name="img"  accept="image/*" >
          </td>
        </tr>
         <tr>
          <th> Project Name: </th>
          <td>
             <input type="text" name="projectName" required="required" pattern = "\w+">
          </td>
        </tr>
         <tr> 
         <th> Project Description:</th>
          <td> 
          <textarea name = "projectDescription" rows="10" cols="30" >Project Description</textarea>
          </td>
        </tr>
         <tr>
          <th> Status:</th>
          <td>
              <input type="radio" name="projectStatus" value="Finished" checked> Finished 
              <input type="radio" name="projectStatus" value="Unfinished"> Unfinished
           </td>
        </tr>
         <tr>
          <th>  Team:</th>
          <td>
             <input type="text" name="teamName" pattern = "\w+">
          </td>
        </tr>
         <tr>
          <th> Man-Hour: </th>
          <td>
            <input type="number" name="manhour" min="0" max = "2000">
          </td>
        </tr>
         <tr>
          <th> Rating: </th>
          <td>
             <input type="text" pattern = "^[1-5][.][0-9]$" name="projectRating" >
          </td>
        </tr>
         <tr>
          <th>  Start Date:</th>
          <td>
            <input type="date" name="startDate">
          </td>
        </tr>
          <tr>
          <th> Finish Date:</th>
          <td>
              <input type="date" name="finishDate"><br>
          </td>
        </tr>
        <tr> 
        <td></td>
        <td><input type="submit" value="Submit" formmethod="post" >  
        </tr>
       
      </form>

  </div>
  </div>
</body>
</html>