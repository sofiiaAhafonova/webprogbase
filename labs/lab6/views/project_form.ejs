<!doctype html>
<html lang="en">
<head>
   <% include partials/head.ejs%>
  <title>Create Project</title>
</head>
<body>
 <% include partials/menu_bar.ejs%>
  <div class="main">  
  <div class="projects">
      <h1 id="C0">Create new project  </h1>
      <form action=" " method="post" enctype="multipart/form-data">
      <table>
        <tr>
          <th> Project logo: </th>
          <td>
            <input type="file" name="logo"  accept="image/*"  required="required">
          </td>
        </tr>
         <tr>
          <th> Project Name: </th>
          <td>
             <input type="text" name="projName" required="required" pattern = "^[a-zA-Z\s]*$">
          </td>
        </tr>
         <tr> 
         <th> Project Description:</th>
          <td> 
          <textarea name = "projDescription" rows="10" cols="30" >Project Description</textarea>
          </td>
        </tr>
         <tr>
          <th> Status:</th>
          <td>
              <input type="radio" name="projStatus" value="Finished" checked> Finished 
              <input type="radio" name="projStatus" value="Unfinished"> Unfinished
           </td>
        </tr>
                 <tr>
          <th> Access:</th>
          <td>
              <input type="radio" name="projAccess" value="Private" checked> Private 
              <input type="radio" name="projAccess" value="Public"> Public
           </td>
        </tr>
         <tr>
          <th>  Team:</th>
          <td>
             <input type="text" name="teamName" required="required"  pattern = "^[a-zA-Z\s]*$">
          </td>>
          </td>
        </tr>
         <tr>
          <th> Man-Hour: </th>
          <td>
            <input type="number" name="manhour" min="1" max = "2000" value = "1" >
          </td>
        </tr>
         <tr>
          <th> Rating: </th>
          <td>
             <input type="text" pattern = "^[1-5][.][0-9]$" name="projRating" value = "1.0">
          </td>
        </tr>
         <tr>
          <th>  Start Date:</th>
          <td>
            <input type="date" name="startDate" value="2017-06-01"  required="required">
          </td>
        </tr>
          <tr>
          <th> Finish Date:</th>
          <td>
              <input type="date" name="finishDate" value="2017-06-01"><br>
          </td>
        </tr>
        <tr> 
        <td></td>
        <td>	<button type="submit" >Create</button></td>
        </tr>
      </form>
  </div>
  </div>
</body>
</html>